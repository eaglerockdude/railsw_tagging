<%= render 'shared/content_title', title: 'Log in' %>


<div class='row'>

  <%= form_tag '/login', :method => 'post' do %>

      <div class='large-5'>
        <%= label_tag 'Email or user name' %>
        <%= text_field_tag :email , nil, :placeholder => 'Your email/user name.'%>
      </div>
      <div class='large-5'>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <%= submit_tag 'Login', class: 'button radius' %>

  <% end %>

</div>