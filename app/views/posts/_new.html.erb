<div class="row text-center">

  <%= form_for(Post.new) do |f| %>

    <div class="large-10 large-centered columns">
      <h4 class="subheader text-left">Post a new topic with tags:</h4>
      <%= f.text_field :author, placeholder: "Your Name" %>
    </div>

    <div class="large-10 large-centered columns">
      <%= f.text_area :content, placeholder: "Your Topic or content", rows: 5 %>
    </div>

      <div class="large-10 large-centered columns">
        <%= f.text_field :all_tags, placeholder: "Your Tags separated with a comma" %>
      </div>

      <div class="large-10 large-centered columns">
        <%= f.submit "Post", class: "button radius" %>
      </div>

  <% end %>

</div>